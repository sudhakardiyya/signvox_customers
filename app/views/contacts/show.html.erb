<%- model_class = Contact -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<%= link_to "Add Address", new_contact_address_path(@contact) %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @contact.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @contact.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_no) %>:</strong></dt>
  <dd><%= @contact.phone_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @contact.mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:linkedn_url) %>:</strong></dt>
  <dd><%= @contact.linkedn_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:facebook_url) %>:</strong></dt>
  <dd><%= @contact.facebook_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:twitter_url) %>:</strong></dt>
  <dd><%= @contact.twitter_url %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customer_path(@contact.customer_id), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_contact_path(@customer,@contact), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_contact_path(@customer,@contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
