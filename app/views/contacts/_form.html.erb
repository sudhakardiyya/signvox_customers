<%= form_for contact, :url=> customer_contacts_path(customer),:html => { :class => 'form-horizontal' } do |f| %>

 <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone_no, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :phone_no, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mobile, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :mobile, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :linkedn_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :linkedn_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :facebook_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :facebook_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :twitter_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :twitter_url, :class => 'text_field' %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :Address_Type, :class => 'control-label' %>
    <div class="controls">
     <%= f.select :address_type, options_for_select(["Primary","Billing", "Shipping"]) %>
    </div>
  </div>
   <div class="control-group">
    <%= f.label :street1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :country, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zip, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customer_path(@customer), :class => 'btn' %>
  </div>
<% end %>
